<div class="container">
  <% if @pending_friendships.count >  0 %>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= render partial: 'friendships/pending' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <h3>Find Friends</h3>
          <ul class="list-group">
            <% @users.each do |user| %>
              <% unless user == current_user || @all_friendship_users.include?(user) %>
                <li class="list-group-item">
                  <%= link_to( user.full_name, user_path(user) ) %>
                  <%= link_to( 'Add Friend', friendships_path(friendship: {friend_id: user.id}), method: :post, class: 'btn btn-primary pull-right' ) %>
                  <br><br>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>