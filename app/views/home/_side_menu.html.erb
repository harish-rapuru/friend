<ul class="list-group">
  <li class="list-group-item"><%= link_to current_user.full_name, user_path(current_user) %></li>
  <li class="list-group-item">
    <%= link_to edit_user_path(current_user) do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Profile 
    <% end %>
  </li>
  
  <% if @friends.count > 0 %>
    <li class="list-group-item">Friends</li>
    <% @friends.each do |friend| %>
      <li class="list-group-item"><%= link_to friend.full_name, user_path(friend) %></li>
    <% end %>
  <% else %>
    <li class="list-group-item"><%= link_to 'Find Friends', '' %></li>
  <% end %>
</ul>