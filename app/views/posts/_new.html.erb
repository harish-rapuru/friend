<div class="panel panel-default">
  <div class="panel-heading">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Update Status
  </div>
  <div class="panel-body">
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.text_field :body, class: 'form-control', placeholder: "What's on your mind?"  %> 
      </div>
      <%= f.submit 'Post', class: 'btn btn-primary pull-right' %>
    <% end %>
  </div>
</div>